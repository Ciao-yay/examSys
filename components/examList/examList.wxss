/* components/examList/examList.wxss */
/* 弹出层 */
.examDescribe{
  width: 600rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  justify-content: flex-start;
  padding: 20rpx;
}
.examDescribe>view{
  font-size: 25rpx;
  margin: 10rpx 0;
}
.crsName{
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: rgb(0,154,214);
  text-align: center;
}
.exams{
  width: 100%;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
.examItem{
  width: 90%;
  /* height: 150rpx;r */
  padding: 20rpx;
  margin: 10rpx 0;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 3px 10px 0 rgba(0, 0, 0, 0.19);  
  border-radius: 10rpx;
  box-sizing: content-box;
  font-size: 30rpx;

  /* text-align: center; */
}
/* 头部信息 */
.header,.main,.footer{
  /* margin-top: 5rpx; */
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.course{
  font-size: 32rpx;
  font-weight: 600;
  color: rgb(0,154,214);
}
.score{
  /* font-size: 30rpx; */
  color: red;
}
/* 描述信息 */
.main{
  color: #888;
  font-size: 28rpx;
}
.subCharpter{
  font-size: 26rpx;
  color:#26baff;
}
/* 落款 */
.footer{
  margin-top: 10rpx;
  color: #ff813d;
  font-size: 25rpx;
}