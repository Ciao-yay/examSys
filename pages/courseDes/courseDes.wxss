.showMore {
  font-size: 70rpx;
  line-height: 70rpx;
  text-align: center;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: white;
  color: rgb(0, 154, 214);
  position: fixed;
  bottom: 240rpx;
  right: 10rpx;
  border: 1rpx solid rgb(204, 204, 204);
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2), 0 2px 4px 0 rgba(0, 0, 0, 0.19);  
}
.showMore span{
  height: 100%;
  width: 100%;
  display: inline-block;
  transition: transform .5s;
}

.selected {
  transform: rotate(90deg);
  transform-origin:center center;
}

.bottom {
  height: 0;
  width: 100%;
  position: fixed;
  bottom: 20rpx;
  background-color: rgba(255, 255, 255, 0.8);
  opacity:0;
  transition: opacity .6s,height .6s;
}
.bottomSelected{
  height: 200rpx;
  opacity:1;
}

.bottom view {
  width: 90%;
  height: 80rpx;
  color: white;
  background: rgb(0, 154, 214, 0.7);
  border-radius: 20rpx;
  /* box-shadow: 2px 2px 2px rgb(204, 204, 204); */
  margin: 0 auto;
  font-size: 35rpx;
  line-height: 80rpx;
  text-align: center;
}

.bottom view:nth-child(2) {
  background: rgb(255, 0, 0, 0.7);
  margin-top: 30rpx;
}